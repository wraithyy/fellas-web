---
import Content from '../../layouts/Content.astro'
import LessonCard from '../cards/LessonCard.astro'
import { getCollection } from 'astro:content'
const funkcniFitness = await getCollection('lessons')
---

<Content className="bg-fellas">
  <div
    class="prose prose-invert w-full max-w-full flex justify-center mb-10 flex-col">
    <h2>Máme 8 typů tréninků</h2>
    <div class="flex justify-center flex-wrap gap-3 mt-3">
      {
        funkcniFitness
          .sort((a, b) => a.data.order - b.data.order)
          .map((item) => {
            return (
              <LessonCard
              item={item}      
              />
            )
          })
      }
    </div>
  </div>
</Content>
