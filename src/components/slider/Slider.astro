---
import { Slider } from "./Slider";
import { getPicture } from "@astrojs/image";

const first = await getPicture({
  src: "../../assets/1.jpg",
  alt: "Fist carousel image",
  widths: [300, 600, 900],
  formats: ["webp", "jpeg"],
  aspectRatio: 1.5,
});
const second = await getPicture({
  src: "../../assets/2.jpg",
  alt: "Second carousel image",
  widths: [300, 600, 900],
  formats: ["webp", "jpeg"],
  aspectRatio: 1.5,
});
const third = await getPicture({
  src: "../../assets/3.jpg",
  alt: "Third carousel image",
  widths: [300, 600, 900],
  formats: ["webp", "jpeg"],
  aspectRatio: 1.5,
});
---

<Slider client:load images={[first, second, third]} />
