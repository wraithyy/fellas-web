---
import Menu from "../components/menu/Menu.astro";
import "./base.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Jsme první hybridní gym v severních Čechách. Díky naším specifickým tréninkům nedochází v oblasti rozvoje ke stagnaci, ale k progresu!"
    />
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <Menu />
    <slot />
  </body>
</html>
